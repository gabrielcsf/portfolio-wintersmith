extends layout
block link
    -var selected = 'portfolio'; //default
    -var tags = env.helpers.getAllTags();
    -var selectedTag = tagName
block content
  span.tag-nav
      if !selectedTag
        span.selected
          a(href='/portfolio')="all"
      else
        a(href='/portfolio')="all"
      each tag in tags
        if tag === selectedTag
          span.selected
            a(href=env.helpers.getTagHome(tag).url)= tag
        else
          a(href=env.helpers.getTagHome(tag).url)= tag
    each article in articles
          div.thumbnail-portfolio
            //- strip html from hover text
            a(href=article.url title = article.intro.replace(/(<([^>]+)>)/ig,""))
              //- thumbnail text
              img(src=article.url + 'thumbnail.jpg')
              br
              div.text !{article.title}    
    div#portfolio-bottom-nav
      //- div.pixel-spacer
      if nextPage
        div.next-link
          a(href=nextPage.url) Next »
       if prevPage
         div.previous-link
          a(href=prevPage.url) « Previous             